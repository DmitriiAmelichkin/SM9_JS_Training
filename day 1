// Advent of Code 2023 Day 1 Part 1 & 2
// Nicole Herrmann
// Node.js

// Topic: Grouped Data, Sums of Arrays

const TRAINING = false;
const fs = require('fs');

let inputfilename;
(TRAINING) ? inputfilename = "./input_training.txt" : inputfilename = "./input.txt";
let groups = fs.readFileSync(inputfilename, "utf-8").split('\r\n\r\n' || '\n\r\n\r')

let part1 = -Infinity;
let sum_biggestThree = [];

for (const group of groups) {
    const answers = group.split('\r\n').map(Number);
    //console.log(answers);
    const elftotal = answers.reduce((acc,cur) => acc+=cur,0) // 0 initial value, acc = accumulated result adds the current (cur) value to a variable
    sum_biggestThree.push(elftotal);
    part1 = Math.max(part1, elftotal);
    }
console.log('Part 1 :>> ', part1);

sum_biggestThree.sort(function(a,b){return b-a});

let part2 = 0;
for (let i=0;i<3;i++){
    part2 += sum_biggestThree[i]; //+= adds a value to the variable, in this case also in the new array
    }

console.log(part2);
